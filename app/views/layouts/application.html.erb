<!DOCTYPE html>
<html>
  <head>
    <title>WildLives</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
     <%= javascript_include_tag 'application' %>
     <script type="text/javascript">
      window.logoutLogo = "<%= image_url('logout_icon.png') %>";
      window.accountLogo = "<%= image_url('account_dropdown_icon.png') %>";
      window.slothLogo = "<%= image_url('sloth_logo.png') %>";
      window.homeLogo = "<%= image_url('home_icon.png') %>";
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
